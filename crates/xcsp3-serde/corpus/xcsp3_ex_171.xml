<instance format="XCSP3" type="QCSP"> 
  <variables> 
    <var id="w"> 1..4 </var>
    <var id="x"> 1..4 </var>
    <var id="y"> 1..4 </var>
    <var id="z"> 1..4 </var>
  </variables> 
  <constraints> 
    <intension> eq(add(w,x),add(y,z)) </intension> 
    <intension> ne(y,z)  </intension> 
  </constraints> 
  <quantification>
    <exists> w x </exists>
    <forall> y </forall>
    <exists> z </exists>    
  </quantification>
</instance> 
