<instance format="XCSP3" type="NCSP"> 
  <variables> 
    <var id="x" type="real"> [-4,4] </var>
    <var id="y" type="real"> [-4,4] </var>
  </variables> 
  <constraints> 
    <intension> eq(sub(y,pow(x,2)),0) </intension> 
    <intension> eq(sub(y,add(x,1)),0) </intension> 
  </constraints> 
</instance> 
